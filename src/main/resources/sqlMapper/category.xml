<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ezen.sample.Mapper.CategoryMapper">

    <select id="getList" resultType="CategoryVo">
        SELECT * FROM c_category ORDER BY cnum DESC
    </select>

    <select id="getListOne">
        SELECT * FROM c_category
        WHERE cnum = #{cnum}
    </select>

    <insert id="cInsert" parameterType="CategoryVo">
        INSERT INTO c_category(code, cname)
        VALUES(#{code}, #{cname})
    </insert>

    <update id="cUpdate" parameterType="CategoryVo">
        UPDATE c_category SET code = #{code}, cname = #{cname}
        WHERE cnum = #{cnum}
    </update>

    <delete id="categoryDel">
        delete from c_category
        where cnum = #{cnum}
    </delete>

</mapper>