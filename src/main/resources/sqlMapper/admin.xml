<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ezen.sample.Mapper.AdminMapper">

    <select id="getAdminById" resultType="kr.ezen.sample.domain.AdminVo">
        SELECT * FROM sadmin
        WHERE aid = #{aid}
    </select>

    <select id="adminLogin" resultType="kr.ezen.sample.domain.AdminVo">
        SELECT * FROM sadmin
        WHERE aid = #{aid}
        AND apassword = #{apassword}
    </select>

</mapper>