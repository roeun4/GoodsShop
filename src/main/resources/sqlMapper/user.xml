<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ezen.sample.Mapper.UserMapper">

    <select id="getList" resultType="kr.ezen.sample.domain.UserVo">
        SELECT * FROM suser
        ORDER BY no DESC
    </select>

    <insert id="userInsert" parameterType="kr.ezen.sample.domain.UserVo">
        insert into suser(username, password, name, dob, email, tel)
        values(#{username}, #{password}, #{name}, #{dob}, #{email}, #{tel})
    </insert>

    <select id="userLogin" resultType="kr.ezen.sample.domain.UserVo">
        SELECT * FROM suser
        WHERE username = #{username}
        AND password = #{password}
    </select>

    <delete id="userDel">
        delete from suser
        where username = #{username}
    </delete>

    <select id="getListOne" resultType="UserVo">
        SELECT * FROM suser
        WHERE username = #{username}
    </select>


</mapper>